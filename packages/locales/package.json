{
  "name": "@junat/locales",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"tsc --watch --preserveWatchOutput\" \"rollup -c -w\"",
    "build": "rimraf dist && tsc --build && rollup -c",
    "test": "vitest run",
    "check-types": "tsc --noEmit --emitDeclarationOnly false",
    "coverage": "vitest run --coverage",
    "lint": "eslint ."
  },
  "exports": {
    "./en.json": "./dist/en.json",
    "./sv.json": "./dist/sv.json",
    "./fi.json": "./dist/fi.json",
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@junat/prettier": "workspace:*",
    "@junat/rollup": "workspace:^",
    "@junat/tsconfig": "workspace:^",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.12.11",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-junat.live": "workspace:*",
    "rimraf": "^5.0.0",
    "rollup": "^4.18.0",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.5.2",
    "vite": "^4.5.3",
    "vitest": "1.6.0"
  },
  "prettier": "@junat/prettier"
}
