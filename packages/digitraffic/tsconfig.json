{
  "compilerOptions": {
    "lib": ["es2020"],
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src", "index.ts"],
  "exclude": ["src/setup.ts", "src/polyfills/fetch.ts"]
}
