{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["NEXT_PUBLIC_DIGITRANSIT_KEY"]
    },
    "gql-gen": {
      "dependsOn": ["^build"]
    },
    "build": {
      "inputs": ["src/**", "!src/generated/**", "codegen.ts"],
      "outputs": ["dist/**", "src/*/generated/**"],
      "env": ["NEXT_PUBLIC_DIGITRANSIT_KEY"]
    }
  }
}
