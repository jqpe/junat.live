{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "tmp/**", "dist/**"]
    },
    "test": {
      "dependsOn": ["^build", "codegen"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^build"],
      "outputs": ["**tsconfig.tsbuildinfo"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "start": {
      "dependsOn": ["build", "codegen"]
    },
    "codegen": {
      "outputs": ["site/src/generated/**"]
    }
  }
}
