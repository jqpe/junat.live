{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "site#build": {
      "dependsOn": ["^build", "site#gql-codegen"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "public/sw.js",
        "public/sw.js.map"
      ],
      "env": ["NEXT_PUBLIC_SENTRY_DSN"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["^build", "site#gql-codegen"],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "lint": {
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^build", "site#gql-codegen"],
      "outputs": ["**/*tsconfig.tsbuildinfo"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.stories.tsx",
        "src/**/*.tsx",
        "src/**/*.ts",
        "tailwind.config.ts",
        "src/styles/*",
        "!src/generated/*"
      ],
      "outputs": ["storybook-static/**"],
      "outputLogs": "new-only"
    },
    "start": {
      "dependsOn": ["build", "site#gql-codegen"]
    },
    "site#gql-codegen": {
      "inputs": [
        "src/generated/*",
        "src/lib/digitraffic/{queries,fragments}/*",
        "codegen.ts",
        "package.json"
      ],
      "outputs": ["src/generated/*"],
      "outputLogs": "hash-only"
    }
  }
}
