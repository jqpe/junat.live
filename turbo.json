{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "lint": {
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^build"],
      "outputs": ["**/*tsconfig.tsbuildinfo"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.stories.tsx",
        "src/**/*.tsx",
        "src/**/*.ts",
        "tailwind.config.ts",
        "src/styles/*"
      ],
      "outputs": ["storybook-static/**"],
      "outputLogs": "new-only"
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}
