{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "site#build": {
      "dependsOn": ["^build", "site#gql-codegen"],
      "outputs": [".next/**", "!.next/cache/**"],
      "outputMode": "new-only",
      "env": ["NEXT_PUBLIC_SENTRY_DSN"]
    },
    "test": {
      "dependsOn": ["^build", "site#gql-codegen"],
      "outputMode": "new-only",
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^build", "site#gql-codegen"],
      "outputs": ["**tsconfig.tsbuildinfo"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.stories.tsx",
        "src/**/*.tsx",
        "src/**/*.ts",
        "tailwind.config.ts",
        "src/styles/*",
        "!src/generated/*"
      ],
      "outputMode": "new-only",
      "outputs": ["storybook-static/**"]
    },
    "start": {
      "dependsOn": ["build", "site#gql-codegen"]
    },
    "site#gql-codegen": {
      "inputs": [
        "src/generated/*",
        "src/lib/digitraffic/{queries,fragments}/*",
        "codegen.ts",
        "package.json"
      ],
      "outputs": ["src/generated/*"],
      "outputMode": "hash-only"
    }
  }
}
