{
  "extends": "@junat/tsconfig/next.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@typings/*": ["src/types/*"],
      "@hooks/*": ["src/hooks/*"],
      "@layouts/*": ["src/layouts/*"],
      "@constants": ["src/constants"],
      "@features/*": ["src/features/*/index.ts"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".**/generated/**"]
}
