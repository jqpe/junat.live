{
  "extends": "@junat/tsconfig/next.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@features/*": ["src/features/*/index.ts"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".**/generated/**"]
}
