{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!vite.config.ts",
        "!**/*.test.*",
        "!**/*.stories.tsx",
        "!.storybook/",
        "!tests/"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "public/sw.js*",
        "public/workbox*"
      ],
      "env": ["NEXT_PUBLIC_SENTRY_DSN", "SENTRY_AUTH_TOKEN", "DOCKER"],
      "outputLogs": "new-only"
    }
  }
}
