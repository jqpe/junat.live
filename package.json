{
  "name": "junat.live",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "test": "turbo run test",
    "build-storybook": "turbo run build-storybook",
    "coverage": "shx rm -rf coverage/** && pnpm run -C site \"/coverage(-storybook)?/\" && pnpm mv-coverage-output && c8 pnpm --filter=./packages/* test",
    "mv-coverage-output": "pnpx nyc report  --reporter=lcovonly -t site/coverage --report-dir coverage/ && shx mv coverage/lcov.info coverage/site.lcov.info"
  },
  "devDependencies": {
    "@junat/prettier": "workspace:*",
    "c8": "^7.12.0",
    "shx": "^0.3.4",
    "turbo": "^1.10.14"
  },
  "prettier": "@junat/prettier",
  "engines": {
    "pnpm": ">=8",
    "node": ">=16"
  },
  "packageManager": "pnpm@8.6.6",
  "pnpm": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "trim@<0.0.3": ">=0.0.3",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "ansi-regex": "3.0.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/react": "18.x",
        "react": "18.x",
        "react-dom": "18.x"
      },
      "ignoreMissing": [
        "react",
        "react-dom",
        "postcss"
      ]
    }
  }
}
